{
    "package": {
        "name": "vlingo-common",
        "repo": "vlingo-platform-java",
        "subject": "vlingo",
        "desc": "Common tools shared across various vlingo projects.",
        "website_url": "https://github.com/vlingo/vlingo-common",
        "issue_tracker_url": "https://github.com/vlingo/vlingo-common/issues",
        "vcs_url": "https://github.com/vlingo/vlingo-common.git",
        "licenses": ["MPL-2.0"],
        "public_download_numbers": true,
        "public_stats": true
    },

    "version": {
        "name": "1.1.0",
        "gpgSign": true
    },

    "files": [
        {
            "includePattern": "target/(.*).jar",
            "uploadPattern": "/io/vlingo/vlingo-common/1.1.0/$1.jar",
            "matrixParams": {
                "override": 1
            }
        },
        {
            "includePattern": "pom.xml",
            "uploadPattern": "/io/vlingo/vlingo-common/1.1.0/vlingo-common-1.1.0.pom",
            "matrixParams": {
                "override": 1
            }
        }
    ],

    "publish": true
}
